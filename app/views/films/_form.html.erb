<%= form_with(model: movie,local:true) do |f|%>

  <%= render "shared/errors_messages", object: movie %>

  <%= f.label :name %>
  <%= f.text_field :name, autofocus: true %>

  <%= f.label :released_on %>
  <%= f.date_select :released_on, {}, {class: "date"} %>

  <%= f.label :rating %>
  <%= f.select :rating, Film::RATINGS, prompt: "Pick one" %>


  <%= f.label :description %>
  <%= f.text_area :description, rows: 7 %>

  <%= f.label :director %>
  <%= f.text_field :director %>

  <%= f.label :duration %>
  <%= f.text_field :duration %>

  <%= f.label :price %>
  <%= f.number_field :price %>

  <%= f.label :image_file_name %>
  <%= f.text_field :image_file_name %>

  <div class="checkboxes">
    <%= f.collection_check_boxes(:genre_ids, Genre.order(:name), :id, :name) %>
  </div>

  <%= f.submit %>

<% end %>